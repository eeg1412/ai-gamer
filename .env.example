# Google Gemini API配置
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash # 默认使用 gemini-2.5-flash

# 服务器配置
PORT=3000
HOST=localhost

# Azure Speech Service配置（TTS语音合成）
# 仅需配置 Key 和 Region，发音人等在管理端设置
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastasia

# Twitch配置（可选）
TWITCH_CHANNEL=your_channel_name
TWITCH_USERNAME=your_bot_username
TWITCH_TOKEN=oauth:your_oauth_token

# 记忆配置
MEMORY_MAX_LENGTH=500
MEMORY_AUTO_SUMMARIZE=true
MEMORY_SUMMARIZE_THRESHOLD=5
